{
  "name": "sutto",
  "version": "0.0.1",
  "description": "Window snapping extension for GNOME Shell",
  "main": "extension.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": ". ./.envrc && tsc --build && node esbuild.config.js",
    "build:release": "BUILD_MODE=release tsc --build && BUILD_MODE=release node esbuild.config.js",
    "watch": "tsc --build --watch",
    "clean": "rm -f dist/*.js dist/*.js.map",
    "copy-files": "./scripts/copy-files.sh",
    "reload": "gdbus call --session --dest org.gnome.Shell --object-path /io/github/x7c1/Sutto --method io.github.x7c1.Sutto.Reload",
    "dev": "npm run build && npm run copy-files && npm run reload",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check:strict": "biome check --error-on-warnings .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "site:dev": "vitepress dev site",
    "site:build": "vitepress build site",
    "site:preview": "vitepress preview site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x7c1/sutto.git"
  },
  "keywords": [
    "gnome-shell-extension",
    "window-snapping",
    "tiling",
    "window-management"
  ],
  "author": "x7c1",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "bugs": {
    "url": "https://github.com/x7c1/sutto/issues"
  },
  "homepage": "https://github.com/x7c1/sutto#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@girs/adw-1": "1.6.0-4.0.0-beta.12",
    "@girs/clutter-14": "14.0.0-4.0.0-beta.12",
    "@girs/gdk-4.0": "4.0.0-4.0.0-beta.12",
    "@girs/gjs": "4.0.0-beta.12",
    "@girs/gnome-shell": "46.0.2",
    "@girs/gtk-4.0": "4.14.4-4.0.0-beta.12",
    "@girs/meta-14": "14.0.0-4.0.0-beta.12",
    "@girs/st-14": "14.0.0-4.0.0-beta.12",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.14"
  },
  "overrides": {
    "@girs/cally-14": "14.0.0-4.0.0-beta.12",
    "@girs/clutter-14": "14.0.0-4.0.0-beta.12",
    "@girs/meta-14": "14.0.0-4.0.0-beta.12",
    "@girs/shell-14": "14.0.0-4.0.0-beta.12",
    "@girs/gio-2.0": "2.80.3-4.0.0-beta.12",
    "@girs/gjs": "4.0.0-beta.12",
    "@girs/cairo-1.0": "1.0.0-4.0.0-beta.12",
    "@girs/glib-2.0": "2.80.3-4.0.0-beta.12",
    "@girs/gobject-2.0": "2.80.3-4.0.0-beta.12",
    "@girs/gmodule-2.0": "2.0.0-4.0.0-beta.12",
    "@girs/freetype2-2.0": "2.0.0-4.0.0-beta.12",
    "@girs/graphene-1.0": "1.0.0-4.0.0-beta.12"
  }
}

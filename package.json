    "@biomejs/biome": "^2.3.7",
    "@girs/clutter-10": "^10.0.0-4.0.0-beta.38",
    "@girs/gjs": "^4.0.0-beta.38",
    "@girs/gnome-shell": "^45.0.0-beta1",
    "@girs/st-1.0": "^1.0.0-4.0.0-beta.38",

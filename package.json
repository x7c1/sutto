  "version": "1.0.0",
  "description": "",
  "main": "extension.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc --noEmit && node esbuild.config.js",
    "build:release": "BUILD_MODE=release tsc --noEmit && BUILD_MODE=release node esbuild.config.js",
    "watch": "tsc --watch --noEmit",
    "clean": "rm -f dist/*.js dist/*.js.map",
    "copy-files": "./scripts/copy-files.sh",
    "reload": "gdbus call --session --dest org.gnome.Shell --object-path /io/github/x7c1/Snappa --method io.github.x7c1.Snappa.Reload",
    "dev": "npm run build && npm run copy-files && npm run reload",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x7c1/snappa.git"
  },
